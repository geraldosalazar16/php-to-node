extends layout

block content
    h1 Sign up
    a(href="/login") Login

    form(method='POST' action='signup')
        div
            label(for='firstName') First Name:
            input#firstName(type='text', placeholder='First Name' name='firstName')
        div
            label(for='lastName') Last Name:
            input#lastName(type='text', placeholder='Last Name' name='lastName')
        div
            label(for='email') Email:
            input#email(type='email', placeholder='email' name='email')
        div
            label(for='password') Password:
            input#password(type='password' name='password')
        div
            label(for='confirmPassword') Confirm Password:
            input#confirmPassword(type='password' name='confirmPassword')
        div
            label(for='securityQ') Choose a Security Question:
            select#securityQ(name='securityQ')
                option(value='1' selected) What is your mother's first name?
                option(value='2') Name your favorite dessert
                option(value='3') When did you meet your best friend?
                option(value='4') Coke or Pepsi?
                option(value='5') Who is your role model?
        div
            label(for='securityA') Security Answer:
            input#securityA(type='text', placeholder='Security Answer' name='securityA')
        div
            label(for='maiserLevel') Select the level of Maiser you want to give:
            select#maiserLevel(name='maiserLevel')
                option(value='1' selected) 10%
                option(value='2') 20%
        button#submit_btn(type='submit') Sign Up

    if errors
        each error in errors
            p.error= error.msg